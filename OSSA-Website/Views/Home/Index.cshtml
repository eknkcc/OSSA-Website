@section Scripts{
    <script>
        $(document).ready(function () {

            //Toastr library options
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": true,
                "progressBar": false,
                "positionClass": "toast-bottom-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };
            //Create Captcha image
            resetCaptchaImage("#img-captcha-contact", "securityCodeContact");

        });
        //Creates new captcha image
        function resetCaptchaImage(captchaID, code) {
            var d = new Date();
            $(captchaID).attr("src", "/get-captcha-image?" + d.getTime() + "&code=" + code);
        }

        //Submit contact form function
        function SubmitContactForm() {

            //Disable submit button
            $('.submitFormButton').prop('disabled', true);

            //Display loading
            $(".spinner").removeClass("load-done");
            $('.spinner').fadeIn(300);
            $('.preloader').fadeIn(300);

            //Create contact model
            var code = $('#securityCodeContact').val();
            var email = $('#contactemail').val()
            var namesurname = $('#contactnamesurname').val();
            var message = $('#contactmessage').val();
            var token = $('input[name="__RequestVerificationToken"]', token).val();

            //Ajax post action
            $.ajax({
                type: "POST",
                url: "../Home/SubmitContactForm",
                data: { "namesurname": namesurname, "email": email, "message": message, "usercode": code, "__RequestVerificationToken": token },
                async: true,
                success: function (result) {
                    if (result.success) {
                        toastr.success(result.message);
                    }
                    else {
                        toastr.warning(result.message);
                    }
                },
                failure: function (response) {
                    toastr.warning("ConnectionError");
                },
                error: function (response) {
                    toastr.error("UnexpectedError");
                }
            }).done(function () {
                //Enable submit button
                $('.submitFormButton').removeAttr("disabled");

                //Hide loading
                $(".spinner").removeClass("load-done");
                $('.spinner').fadeOut(300);
                $('.preloader').delay(300).fadeOut(300);

                //Reset captcha image
                resetCaptchaImage("#img-captcha-contact", "securityCodeContact");
                $(".captchaDiv").removeClass("d-none");
            });

        }

    </script>
}